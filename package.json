  "author": "Defra",
  "license": "OGL-UK-3.0",
  "dependencies": {
    "@azure/data-tables": "^13.2.1",
    "@azure/identity": "^4.4.1",
    "@azure/storage-blob": "^12.11.0",
    "@hapi/hapi": "^20.2.1",
    "applicationinsights": "^2.9.6",
    "dotenv": "^16.0.3",
    "ffc-messaging": "^2.10.1",
    "hapi-pino": "11.0.1",
    "joi": "^17.6.0",
    "pg": "^8.7.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.16.2",
    "uuid": "^8.3.2"
  },
  "overrides": {
    "semver": "7.5.2",
    "mssql": {
      "@azure/identity": "4.4.1"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.26.8",
    "@babel/plugin-transform-modules-commonjs": "^7.26.3",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.1.9",
    "pino-pretty": "^7.5.1",
    "standard": "^17.1.2"
  },
  "standard": {
    "globals": [
      "describe",
      "beforeEach",
      "expect",
      "test",
      "afterEach",
      "jest",
      "beforeAll",
      "afterAll"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "**/test-output/**"
    ]
  }
}